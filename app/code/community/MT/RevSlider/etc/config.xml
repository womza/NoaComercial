<config>
    <modules>
        <MT_RevSlider>
            <version>2.1</version>
        </MT_RevSlider>
    </modules>

    <global>
        <blocks>
            <revslider>
                <class>MT_RevSlider_Block</class>
            </revslider>
        </blocks>
        <helpers>
            <revslider>
                <class>MT_RevSlider_Helper</class>
            </revslider>
        </helpers>
        <models>
            <revslider>
                <class>MT_RevSlider_Model</class>
                <resourceModel>revslider_mysql4</resourceModel>
            </revslider>
            <revslider_mysql4>
                <class>MT_RevSlider_Model_Mysql4</class>
                <entities>
                    <slider>
                        <table>mt_revslider</table>
                    </slider>
                    <slide>
                        <table>mt_revslide</table>
                    </slide>
                    <animation>
                        <table>mt_animation</table>
                    </animation>
                    <css>
                        <table>mt_css</table>
                    </css>
                </entities>
            </revslider_mysql4>
        </models>
        <resources>
            <revslider_setup>
                <setup>
                    <module>MT_RevSlider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </revslider_setup>
        </resources>
    </global>

    <frontend>
        <routers>
            <revslider>
                <use>standard</use>
                <args>
                    <module>MT_RevSlider</module>
                    <frontName>revslider</frontName>
                </args>
            </revslider>
        </routers>
    </frontend>

    <admin>
        <routers>
            <revslideradmin>
                <use>admin</use>
                <args>
                    <module>MT_RevSlider</module>
                    <frontName>revslideradmin</frontName>
                </args>
            </revslideradmin>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <revslider>
                    <file>mt_revslider.xml</file>
                </revslider>
            </updates>
        </layout>
        <cms>
            <browser>
                <extensions>
                    <media_allowed>
                        <mp4>1</mp4>
                        <webm>1</webm>
                        <ogv>1</ogv>
                    </media_allowed>
                </extensions>
            </browser>
        </cms>
    </adminhtml>
</config>