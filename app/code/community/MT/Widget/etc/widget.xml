<widgets>
    <mtwidget type="mtwidget/widget" translate="name description">
        <name>MT Widgets</name>
        <description>Show products, photos, blocks in widget</description>
        <parameters>
            <widget_title translate="label">
                <label>Widget Title</label>
                <visible>1</visible>
                <type>text</type>
            </widget_title>
            <cache translate="label description">
                <label>Cache Lifetime</label>
                <visible>1</visible>
                <value>86400</value>
                <type>text</type>
                <description>If set, caching this widget (in seconds)</description>
            </cache>
            <widget_type translate="label description">
                <label>Widget Type</label>
                <visible>1</visible>
                <type>select</type>
                <required>1</required>
                <source_model>mtwidget/widget_source_type</source_model>
                <description>Select widget content</description>
            </widget_type>
            <block_ids translate="label description">
                <label>Blocks</label>
                <visible>1</visible>
                <type>multiselect</type>
                <required>1</required>
                <source_model>mtwidget/widget_source_block</source_model>
                <depends>
                    <widget_type>
                        <value>block</value>
                    </widget_type>
                </depends>
                <description>Choose blocks to show</description>
            </block_ids>
            <block_lg>
                <type>hidden</type>
            </block_lg>
            <block_md>
                <type>hidden</type>
            </block_md>
            <block_sm>
                <type>hidden</type>
            </block_sm>
            <block_xs>
                <type>hidden</type>
            </block_xs>
            <category_ids translate="label description">
                <label>Categories</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_renderer_category</type>
                <depends>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>If category is selected, the product collection will be filtered by this categories</description>
            </category_ids>
            <mode translate="label description">
                <label>Product Collection</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_mode</source_model>
                <depends>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>The product collection</description>
            </mode>
            <attribute translate="label description">
                <label>Attribute</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_attribute</source_model>
                <depends>
                    <widget_type>
                        <value>attribute</value>
                    </widget_type>
                </depends>
                <description>Select attribute to show</description>
            </attribute>
            <attribute_options translate="label description">
                <label>Attribute Options</label>
                <visible>1</visible>
                <type>multiselect</type>
                <depends>
                    <widget_type>
                        <value>attribute</value>
                    </widget_type>
                </depends>
                <description>Select attribute options to show</description>
                <helper_block>
                    <type>mtwidget/adminhtml_widget_renderer_attribute_option</type>
                    <data>
                        <target>attribute</target>
                    </data>
                </helper_block>
            </attribute_options>
            <attribute_mode translate="label description">
                <label>Filter Product</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <depends>
                    <widget_type>
                        <value>attribute</value>
                    </widget_type>
                </depends>
                <description>Only show attribute option assigned to product(s)</description>
            </attribute_mode>
            <product_ids translate="label description">
                <label>Products</label>
                <visible>1</visible>
                <required>1</required>
                <type>mtwidget/adminhtml_widget_renderer_product</type>
                <depends>
                    <mode>
                        <value>specificed</value>
                    </mode>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>Specific product ids here</description>
            </product_ids>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <values>
                    <default translate="label">
                        <value>mt/widget/default.phtml</value>
                        <label>Default</label>
                    </default>
                </values>
            </template>
            <scroll translate="label">
                <label>Enable Scroll</label>
                <visible>1</visible>
                <value>0</value>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <description>Enable FlexSlider</description>
            </scroll>
            <autoplay translate="label">
                <label>Slideshow</label>
                <visible>1</visible>
                <value>1</value>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
                <description>Animate slider automatically</description>
            </autoplay>
            <loop translate="label">
                <label>Animation Loop</label>
                <visible>1</visible>
                <value>1</value>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
                <description>Should the animation loop? If false, directionNav will received "disable" classes at either end</description>
            </loop>
            <paging translate="label">
                <label>Show Paging</label>
                <visible>1</visible>
                <value>1</value>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
                <description>Create navigation for paging control of slider</description>
            </paging>
            <speed translate="label">
                <label>Slideshow Speed</label>
                <visible>1</visible>
                <value>5000</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
                <description>Set the speed of the slideshow cycling, in milliseconds</description>
            </speed>
            <namespace translate="label">
                <label>Namespace</label>
                <visible>1</visible>
                <value>flex-</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
                <description>Prefix string attached to the class of every element generated by the plugin</description>
            </namespace>
            <limit translate="label">
                <label>Limit</label>
                <visible>1</visible>
                <value>10</value>
                <type>text</type>
                <required>1</required>
                <depends>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>Limit number of products show on widget</description>
            </limit>
            <column translate="label description">
                <label>Column</label>
                <class>validate-number</class>
                <visible>1</visible>
                <value>4</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>0</value>
                    </scroll>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>Limit number of items on row (only for widget product)</description>
            </column>
            <direction translate="label description">
                <label>Direction</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_direction</source_model>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                </depends>
            </direction>
            <responsive translate="label description">
                <label>Responsive</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_responsive</source_model>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <direction>
                        <value>horizontal</value>
                    </direction>
                </depends>
            </responsive>
            <responsive_width translate="label description">
                <label>Responsive Width</label>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <responsive>
                        <value>width</value>
                    </responsive>
                    <direction>
                        <value>horizontal</value>
                    </direction>
                </depends>
                <description>Box-model width of individual carousel items, including horizontal borders and padding</description>
            </responsive_width>
            <responsive_bkp translate="label description">
                <label>Breakpoints</label>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <responsive>
                        <value>breakpoint</value>
                    </responsive>
                    <direction>
                        <value>horizontal</value>
                    </direction>
                </depends>
                <description>Size:Column. Ex: 1600:6 1200:5 960:4 768:3 480:2 320:1</description>
            </responsive_bkp>
            <row translate="label">
                <label>Row</label>
                <visible>1</visible>
                <value>1</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <widget_type>
                        <value>product</value>
                    </widget_type>
                </depends>
                <description>Only use in product widget</description>
            </row>
            <margin translate="label">
                <label>Item Margin</label>
                <visible>1</visible>
                <value>1</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <direction>
                        <value>horizontal</value>
                    </direction>
                </depends>
                <description>Margin between carousel items (left and right margin)</description>
            </margin>
            <move translate="label">
                <label>Move</label>
                <visible>1</visible>
                <value>0</value>
                <type>text</type>
                <depends>
                    <scroll>
                        <value>1</value>
                    </scroll>
                    <direction>
                        <value>horizontal</value>
                    </direction>
                </depends>
                <description>Number of carousel items that should move on animation. If 0, slider will move all visible items</description>
            </move>
            <preview_lg translate="label">
                <label>Layout Large Devices (≥1200px)</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_renderer_preview</type>
                <helper_block>
                    <type>mtwidget/adminhtml_widget_renderer_layout</type>
                    <data>
                        <target>lg</target>
                    </data>
                </helper_block>
                <depends>
                    <scroll>
                        <value>0</value>
                    </scroll>
                    <widget_type>
                        <value>block</value>
                    </widget_type>
                </depends>
            </preview_lg>
            <preview_md translate="label">
                <label>Layout Medium Devices (≥992px)</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_renderer_preview</type>
                <helper_block>
                    <type>mtwidget/adminhtml_widget_renderer_layout</type>
                    <data>
                        <target>md</target>
                    </data>
                </helper_block>
                <depends>
                    <scroll>
                        <value>0</value>
                    </scroll>
                    <widget_type>
                        <value>block</value>
                    </widget_type>
                </depends>
            </preview_md>
            <preview_sm translate="label">
                <label>Layout Small Devices (≥768px)</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_renderer_preview</type>
                <helper_block>
                    <type>mtwidget/adminhtml_widget_renderer_layout</type>
                    <data>
                        <target>sm</target>
                    </data>
                </helper_block>
                <depends>
                    <scroll>
                        <value>0</value>
                    </scroll>
                    <widget_type>
                        <value>block</value>
                    </widget_type>
                </depends>
            </preview_sm>
            <preview_xs translate="label">
                <label><![CDATA[Layout Extra Small Devices (<768px)]]></label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_renderer_preview</type>
                <helper_block>
                    <type>mtwidget/adminhtml_widget_renderer_layout</type>
                    <data>
                        <target>xs</target>
                    </data>
                </helper_block>
                <depends>
                    <scroll>
                        <value>0</value>
                    </scroll>
                    <widget_type>
                        <value>block</value>
                    </widget_type>
                </depends>
            </preview_xs>
            <parallax translate="label">
                <label>Parallax</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </parallax>
            <parallax_type translate="label">
                <label>Parallax Background Type</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_parallax_type</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                </depends>
            </parallax_type>
            <parallax_video_src translate="label">
                <label>Parallax Video Source</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_form_element_video</type>
                <description>Ex: http://www.youtube.com/watch?v=UVOpiKiCEeY or http://vimeo.com/81979871</description>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>video</value>
                    </parallax_type>
                </depends>
            </parallax_video_src>
            <parallax_video_volume translate="label">
                <label>Parallax Video Volume</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>video</value>
                    </parallax_type>
                </depends>
            </parallax_video_volume>
            <parallax_image_src translate="label">
                <label>Parallax Background Source</label>
                <visible>1</visible>
                <type>mtwidget/adminhtml_widget_form_element_browser</type>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>image</value>
                    </parallax_type>
                </depends>
            </parallax_image_src>
            <parallax_image_fit translate="label">
                <label>Parallax Background Size</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_parallax_image_size</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>image</value>
                    </parallax_type>
                </depends>
            </parallax_image_fit>
            <parallax_image_repeat translate="label">
                <label>Parallax Background Repeat</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_parallax_image_repeat</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>image</value>
                    </parallax_type>
                </depends>
            </parallax_image_repeat>
            <!--parallax_image_position translate="label">
                <label>Parallax Background Position</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_parallax_image_position</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                    <parallax_type>
                        <value>image</value>
                    </parallax_type>
                </depends>
            </parallax_image_position-->
            <parallax_overlay translate="label">
                <label>Parallax Overlay</label>
                <visible>1</visible>
                <type>select</type>
                <source_model>mtwidget/widget_source_parallax_overlay</source_model>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                </depends>
            </parallax_overlay>
            <parallax_velocity translate="label">
                <label>Parallax Velocity</label>
                <visible>1</visible>
                <value>0.2</value>
                <type>text</type>
                <description>Speed to move relative to vertical scroll. Example: 0.1 is one tenth the speed of scrolling, 2 is twice the speed of scrolling</description>
                <depends>
                    <parallax>
                        <value>1</value>
                    </parallax>
                </depends>
            </parallax_velocity>
        </parameters>
    </mtwidget>
</widgets>
