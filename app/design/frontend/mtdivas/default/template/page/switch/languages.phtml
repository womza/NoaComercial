/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<div class="form-language">
	<div class="select pull-right">
        <span class="label-language pull-left visible-lg"><?php echo $this->__('Your Language:') ?></span>
		<!--<label for="select-language" id="mt_language" class="language-label"><?php echo $this->__('Language:') ?></label>-->
		<select id="select-language" title="<?php echo $this->__('Language') ?>" onchange="window.location.href=this.value">
		<?php foreach ($this->getStores() as $_lang): ?>
			<?php $_selected = ($_lang->getId() == $this->getCurrentStoreId()) ? ' selected="selected"' : '' ?>
			<option class="" value="<?php echo $_lang->getCurrentUrl() ?>"<?php echo $_selected ?>><?php echo $this->htmlEscape($_lang->getName()) ?></option>
		<?php endforeach; ?>
		</select>
		
		<script type="text/javascript">
			$mt(window).load(function(){					
				$mt("#select-language option").each(function(i,e){
					var lang = $mt(e).html().toLowerCase();
					$mt('.form-language .sbOptions li:eq('+i+') a').css({
						"background-image":"url('<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB);?>media/wysiwyg/magenthemes/languages/"+lang+".png')",
						"background-repeat":"no-repeat",
						"background-position":"5px 8px"
					});
				}); 
				$mt('.sbHolder:eq(0)').addClass('lang');
				$mt('.sbHolder:eq(1)').addClass('curs');
			});
		</script>		
	</div>
</div>
<?php endif; ?>